<configuration>

    <Properties>
        <Property name="basePath">D:\Projects\todo\logs</Property>
    </Properties>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
<!--            <pattern>%-5p [%d{ISO8601}] [%X{traceId}, %X{spanId}] %c: %m\n%ex</pattern>-->
            <pattern>%5p [${spring.application.name:},%X{traceId:-},%X{spanId:-}]</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
    <logger name="com.hegde.todo.filter.logging.CustomRequestLogFilter">
        <level value="DEBUG" />
    </logger>
</configuration>